<resources>
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.NoAnimation" parent="MyMaterialTheme">
     </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/material_grey300</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/search_hint_text_color</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinner</item>
    </style>
    <style name="mySpinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="PopupMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- ToolBar -->
    <style name="ToolBarSearchStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:homeAsUpIndicator">@null</item>
    </style>

    <!--Them for splash screen-->
    <style name="MyMaterialTheme.CenterAnimation">
        <item name="android:windowBackground">@drawable/bg_layer_list_splash_screen</item>
    </style>

    <!--style for text view-->
    <style name="TextViewTimePlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/md_font_text_normal</item>
    </style>

    <!--style for text view-->
    <style name="TextViewWhiteColor">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextViewPrimaryColor">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="TextViewArtistColor">
        <item name="android:textColor">@color/material_grey300</item>
    </style>

    <!--style for text view-->
    <style name="TextViewLyricFocus" parent="TextViewWhiteColor">
        <item name="android:textSize">@dimen/md_font_text_xxxlarge</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--style for button-->
    <style name="ButtonShufflePlay">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="ButtonNextPlay">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="ButtonFavoritePlay">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="ButtonPlayPlayed">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>


</resources>

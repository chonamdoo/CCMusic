<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/md_margin_small">


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/width_card_album"
        android:layout_height="@dimen/height_card_album"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center|end"
        card_view:cardCornerRadius="@dimen/corner_radius_card_your_music"
        card_view:cardElevation="@dimen/elevation_card_your_music">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_artist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_imageview_album"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_artist_default"
            />

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:paddingLeft="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv_artist_names"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Chuyen Tinh"
                    android:textColor="@color/material_black"
                    android:textSize="@dimen/md_font_text_normal"

                />

                <TextView
                    android:id="@+id/tv_song_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/md_margin_small"
                    android:text="20 songs"
                    android:textSize="@dimen/md_font_text_small"

                />
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>